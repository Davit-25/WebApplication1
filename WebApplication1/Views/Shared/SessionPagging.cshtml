@model WebApplication1.Models.Paging

<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (Model.CurrentPage > 1)
            {
                <il class="page-item">
                    <a class="page-link" asp-controller="Sessions" asp-action="AllCategories"
                       asp-route-pg="1">First</a>
                </il>
                <il>
                    <a class="page-link" asp-controller="Sessions" asp-action="AllCategories" asp-route-pg="@(Model.CurrentPage - 1)">Previous</a>
                </il>
            }

            @for (int pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge==Model.CurrentPage ?"active":"")">
                    <a class="page-link" asp-controller="Sessions" asp-action="AllCategories" asp-route-pg="@pge">@pge</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <il>
                    <a class="page-link" asp-controller="Sessions" asp-action="AllCategories" asp-route-pg="@(Model.CurrentPage+1)">Next</a>
                </il>
                <il class="page-item">
                    <a class="page-link" asp-controller="Sessions" asp-action="AllCategories"
                       asp-route-pg="@(Model.TotalPages)">Last</a>
                </il>
            }

        </ul>
    }

</div>